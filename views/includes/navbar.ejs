

<style>
  /* Increase sidebar height */
  .offcanvas-body {
    height: 80vh; /* Makes it 80% of screen height */
    overflow-y: auto; /* Enables scrolling */
  }

  /* Increase list item spacing */
  .list-group-item {
    padding: 25px 30px;
    font-size: 1.1rem;
  }
</style>

<!-- Header -->
<header class="navbar navbar-expand-lg navbar-light bg-light px-3 shadow-sm">
    <button class="btn btn-outline-dark me-2" id="menu-toggle">
      <i class="fa-solid fa-bars fa-lg"></i>
    </button>
  
    <a href="/" class="text-decoration-none"><b class="navbar-brand">SM Links</b></a>
  
    <div class="ms-auto d-flex align-items-center gap-2">
      <span class="fw-bold text-dark">Hello, <%= user.username.charAt(0).toUpperCase() + user.username.slice(1) %></span>

      <img src="<%= user.profileImage %>" alt="Profile Image" class="rounded-circle border" width="40">
    </div>
  </header>
  
  <!-- Sidebar (Offcanvas Menu) -->
  <div class="offcanvas offcanvas-start" id="side-menu">
    <div class="offcanvas-header">
      <h5 id="menu-header-text" class="offcanvas-title">Welcome</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
  
    <div class="offcanvas-body mb-5">
      <ul class="list-group list-group-flush mb-3">
        <li class="list-group-item"><a href="/a/track-stats" class="text-decoration-none"><i class="fas fa-home me-2"></i>Dashboard</a></li>
        <li class="list-group-item"><a href="/a/dashboard" class="text-decoration-none"><i class="fa-solid fa-link me-2"></i>My Links</a></li>
        <li class="list-group-item"><a href="/a/profile" class="text-decoration-none"><i class="fas fa-user-friends me-2"></i>Profile</a></li>
        <li class="list-group-item"><a href="/<%= user.username %>" target="_blank" class="text-decoration-none"><i class="fa-regular fa-clipboard me-2"></i>Preview</a></li>
        <li class="list-group-item"><a href="/a/login" class="text-decoration-none text-danger"><i class="fas fa-box me-2"></i>Logout</a></li>
      </ul>
    </div>
  </div>
  
  <!-- JavaScript -->
  <script>
    // Sidebar toggle
    document.getElementById("menu-toggle").addEventListener("click", function () {
      let sidebar = new bootstrap.Offcanvas(document.getElementById("side-menu"));
      sidebar.show();
    });
  
    // Update Sidebar Header Text
    function updateSidebarHeader() {
      const menuHeaderText = document.getElementById("menu-header-text");
      menuHeaderText.textContent = window.innerWidth <= 768 ? "SM Links" : "Welcome";
    }
  
    window.addEventListener("resize", updateSidebarHeader);
    window.addEventListener("load", updateSidebarHeader);
  </script>
  
  <!-- Include Bootstrap (if not already included) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  